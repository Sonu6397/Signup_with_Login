@{ ViewBag.Title = "Create"; }
<h1 style="padding:.9rem 1rem; width:97%; margin:0rem auto;">Sign Up</h1>

@model  Signup_with_Login.dbo_connet.Student_tbl
<div class="bg-primary">
    <h2 style="padding:.9rem 0rem; width:95%; margin:0rem auto;">Registation Form</h2>
</div>
@using (Html.BeginForm("Signup", "Home", FormMethod.Post))
{
@Html.HiddenFor(m => m.Id)
                <section>
                    <div class="container" style="padding:0px;margin-top:5px">
                        <div class="col-sm-12">
                            <div class="bg-light-color1 alert-success py-2">
                                <div class="row">
                                    <div class="col-sm-9 col-lg-4 mt-2 mt-sm-4">
                                        <div class="form-group mb-0 bg-light-color1" data-toggle="tooltip" data-placement="top" title="First Name">

                                            @Html.TextBoxFor(m => m.First_Name, new { @class = "form-control", @required = "required", placeholder = "First Name" })
                                            @Html.ValidationMessageFor(m => m.First_Name, "", new { @class = "error" })
                                        </div>
                                    </div>
                                    <div class="col-sm-9 col-lg-4 mt-2 mt-sm-4">
                                        <div class="form-group mb-0 bg-light-color1" data-toggle="tooltip" data-placement="top" title="Last Name">

                                            @Html.TextBoxFor(m => m.Last_Name, new { @class = "form-control", placeholder = "Last Name" })
                                            @Html.ValidationMessageFor(m => m.Last_Name, "", new { @class = "error" })
                                        </div>
                                    </div>

                                    <div class="col-sm-9 col-lg-4 mt-2 mt-sm-4">
                                        <div class="form-group mb-0 bg-light-color1" data-toggle="tooltip" data-placement="top" title="Email">

                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "error" })

                                        </div>
                                    </div>
                                    <div class="col-sm-9 col-lg-4 mt-2 mt-sm-4">
                                        <div class="form-group mb-0 bg-light-color1" data-toggle="tooltip" data-placement="top" title="Password">

                                            @Html.TextBoxFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "error" })

                                        </div>
                                    </div>

                                    <div class="col-sm-9 col-lg-4 mt-2 mt-sm-4">
                                        <div class="form-group mb-0 bg-light-color1" data-toggle="tooltip" data-placement="top" title="Practice Field">

                                            @Html.TextBoxFor(m => m.Practice_Field, new { @class = "form-control", placeholder = "Practice Field" })
                                            @Html.ValidationMessageFor(m => m.Practice_Field, "", new { @class = "error" })

                                        </div>
                                    </div>
                                    <div class="col-sm-9 col-lg-4 mt-2 mt-sm-4">
                                        <div class="form-group mb-0 bg-light-color1" data-toggle="tooltip" data-placement="top" title="Role">

                                            @Html.TextBoxFor(m => m.Role, new { @class = "form-control", placeholder = "Role" })
                                            @Html.ValidationMessageFor(m => m.Role, "", new { @class = "error" })

                                        </div>
                                    </div>
                                    <div class="col-sm-12 ">
                                        <button type="submit">Submit</button>
                                        <button type="Reset" class="btn-danger">Reset</button>
                                    </div>
                                    <div class="col-sm-9 col-lg-4 mt-2 mt-sm-4">
                                        <form name="form1" method="post" enctype="multipart/form-data" action="api/upload">

                                            <div>
                                                <label for="image1">Decoment File</label>
                                                <input name="image1" type="file" />
                                            </div>


                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                </section>


                                <partial name="_list" />
}


