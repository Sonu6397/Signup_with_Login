@model Signup_with_Login.dbo_connet.Student_tbl

@{
    ViewBag.Title = "Login";
}
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Login Or Sign up</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                    {
                        <form role="form">
                            <fieldset>
                                <div class="error">
                                    @TempData["Invalid"]
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "                             Email" })
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "error" })
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "                          password" })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "error" })
                                </div>
                               
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-lg btn-block">Continue</button>
                                </div>
                                <div class="divider d-flex align-items-center my-4">
                                    <p class="text-center fw-bold mx-3 mb-0 text-muted">OR</p>
                                </div>
                            </fieldset>
                        </form>

                    }
                </div>

                <div class="form-group">
                    <a class="btn btn-primary btn-lg btn-block" style="background-color: #3b5998" href="#!"
                       role="button">
                        <i class="fab fa-facebook-f me-2"></i>Sign  with Facebook
                    </a>
                </div>
                <div class="form-group">
                    <a class="btn btn-primary btn-lg btn-block" style="background-color: #55acee" href="#!"
                       role="button">
                        <i class="fab fa-twitter me-2"></i>Sign in with Twitter
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
